# LinkedTrust API credentials
LINKEDTRUST_EMAIL={{ linkedtrust_email }}
LINKEDTRUST_PASSWORD={{ linkedtrust_password }}
LINKEDTRUST_BASE_URL={{ linkedtrust_base_url }}

# AI API keys
ANTHROPIC_API_KEY={{ anthropic_api_key }}
{% if openai_api_key is defined %}
OPENAI_API_KEY={{ openai_api_key }}
{% endif %}

# Flask configuration
FLASK_SECRET_KEY={{ flask_secret_key }}
FLASK_PORT={{ app_port }}
FLASK_DEBUG=False

# Optional: Override default Claude model
# CLAUDE_MODEL=claude-3-sonnet-20240229

# Optional: AWS S3 for file storage
{% if aws_access_key_id is defined %}
AWS_ACCESS_KEY_ID={{ aws_access_key_id }}
AWS_SECRET_ACCESS_KEY={{ aws_secret_access_key }}
AWS_S3_BUCKET={{ aws_s3_bucket }}
AWS_REGION={{ aws_region }}
{% endif %}
